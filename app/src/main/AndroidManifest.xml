<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.hardcoded.notes">

  <application
      android:name=".app.App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name="justmakeitwork.ListNotesActivity"
        android:label="@string/app_name"/>

    <activity
        android:name="justmakeitwork.CreateNoteActivity"
        android:label="@string/activity_label_new_note"
        android:parentActivityName="justmakeitwork.ListNotesActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

  </application>

</manifest>
