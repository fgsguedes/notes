<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fgsguedes.notes">

  <application
      android:name=".app.App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name=".app.note.ui.activity.ListNotesActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".app.note.ui.activity.CreateNoteActivity"
        android:label="@string/activity_label_new_note"
        android:parentActivityName=".app.note.ui.activity.ListNotesActivity"
        android:windowSoftInputMode="adjustResize"/>

  </application>

</manifest>
